{% extends '@SyliusShop/layout.html.twig' %}

{# {% form_theme form '@SyliusShop/Form/theme.html.twig' %} #}

{% block title %}{{ 'sylius.ui.contact_us'|trans }} | {{ parent() }}{% endblock %}

{% block content %}
<div class="ui hidden divider"></div>
<div class="ui two column centered stackable grid">
    <div class="column">
        <h1 class="ui header">
            <i class="circular mail icon"></i>
            <div class="content">
                {{ 'sylius.ui.contact_us'|trans }}
                <div class="sub header">{{ 'sylius.ui.use_the_contact_form_below_to_send_us_a_message'|trans }}</div>

                {{ sylius_template_event('sylius.shop.contact.request.after_content_header') }}
            </div>
        </h1>
        
        <div class="ui segment">
            <div class="ui fluid search selection dropdown order-select">
                <input type="hidden" name="order" id="order" />
                <i class="dropdown icon"></i>
                <div class="default text">{{ 'ikuzo_rma.form.dropdown.select_order'|trans }}</div>
                <div class="menu">
                    {% for order in orders %}
                        <div class="item" data-value="{{ order.id }}">{{ order.id }}</div>
                    {% endfor %}  
                </div>
            </div>
    
            <div class="ui form html-form">
                
            </div>

        </div>
    </div>
</div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script>
        document.querySelector('#order').addEventListener('change', function (event) {
            var order = event.target.value;
            var htmlForm = document.querySelector('.html-form');
            htmlForm.innerHTML = '';
            if (order) {
                fetch('{{ path('ikuzo_rma_ajax_get_rma_form') }}?id=' + order)
                    .then(function (response) {
                        return response.json();
                    }).then(function (data) {
                        htmlForm.innerHTML = data.html;
                    }
                );
            }
        });
    
    </script>
{% endblock %}